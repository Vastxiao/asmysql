{
    // 使用 IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal", // 与 PyCharm 一样在终端显示输出
            // 自动使用 uv 创建的 .venv 解释器（无需手动指定路径）
            "python": "${command:python.interpreterPath}",
            "justMyCode": false // 允许调试第三方库（可选）
        }
    ]
}